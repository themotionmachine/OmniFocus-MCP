{
  "name": "omnifocus-mcp-pro",
  "type": "module",
  "version": "1.2.3",
  "description": "Professional-grade MCP server for OmniFocus with 62 automation tools including Perspectives, Review system, TaskPaper, Forecast, Window/UI control, and advanced bulk operations",
  "main": "dist/server.js",
  "bin": {
    "omnifocus-mcp-pro": "./cli.cjs"
  },
  "scripts": {
    "build": "tsc && npm run copy-files && chmod 755 dist/server.js",
    "copy-files": "mkdir -p dist/utils/omnifocusScripts && cp src/utils/omnifocusScripts/*.js dist/utils/omnifocusScripts/",
    "start": "node dist/server.js",
    "dev": "tsc -w"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.24.3",
    "zod": "^4.1.13"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fgabelmannjr/omnifocus-mcp-pro.git"
  },
  "homepage": "https://github.com/fgabelmannjr/omnifocus-mcp-pro",
  "keywords": [
    "omnifocus",
    "mcp",
    "model-context-protocol",
    "claude",
    "task-management",
    "productivity",
    "gtd",
    "automation",
    "perspectives",
    "taskpaper",
    "review-system",
    "forecast",
    "professional",
    "power-tools",
    "ai"
  ],
  "license": "MIT"
}
